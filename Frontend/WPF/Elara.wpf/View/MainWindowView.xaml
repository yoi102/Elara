<mah:MetroWindow x:Class="Elara.wpf.View.MainWindowView"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:yr="https://github.com/yoi102/xaml/controls"
                 xmlns:identifiers="clr-namespace:Frontend.Shared.Identifiers;assembly=Frontend.Shared"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:local="clr-namespace:Elara.wpf"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
                 xmlns:viewmodel="clr-namespace:Elara.wpf.ViewModel;assembly=Elara.ViewModel"
                 d:DataContext="{d:DesignInstance Type=viewmodel:MainWindowViewModel}"
                 Name="window"
                 Title="Elara"
                 Width="1100"
                 Height="800"
                 RenderTransformOrigin="0.5,0.5"
                 Style="{StaticResource MaterialDesignWindow}"
                 TitleAlignment="Center"
                 TitleCharacterCasing="Normal"
                 WindowStartupLocation="CenterScreen"
                 mc:Ignorable="d">

    <mah:MetroWindow.LeftWindowCommands>
        <mah:WindowCommands>
            <ToggleButton x:Name="MenuToggleButton"
                          Height="30"
                          Margin="5,0,10,0"
                          AutomationProperties.Name="HamburgerToggleButton"
                          IsChecked="False"
                          Style="{StaticResource MaterialDesignHamburgerToggleButton}" />
            <md:PopupBox md:RippleAssist.Feedback="{Binding RelativeSource={RelativeSource Self}, Path=Foreground, Converter={x:Static md:BrushRoundConverter.Instance}}"
                         Style="{StaticResource WindowCommandsPopupBoxStyle}">
                <StackPanel>
                    <Button Content="Hello World" />
                    <Button Content="Nice Popup" />
                    <Button Content="Goodbye" />
                </StackPanel>
            </md:PopupBox>
        </mah:WindowCommands>
    </mah:MetroWindow.LeftWindowCommands>
    <md:DialogHost DialogTheme="Inherit"
                   Identifier="{x:Static identifiers:DialogHostIdentifiers.MainWindow}">
        <md:DrawerHost Name="NavDrawer"
                       IsLeftDrawerOpen="{Binding ElementName=MenuToggleButton, Path=IsChecked}"
                       LeftDrawerCornerRadius="0 10 10 0"
                       OpenMode="Modal">
            <md:DrawerHost.LeftDrawerContent>
                <md:ColorZone Width="200"
                              Padding="10"
                              md:ElevationAssist.Elevation="Dp3"
                              DockPanel.Dock="Top"
                              Mode="Standard">
                    <Button Margin="0,0,0,0"
                            md:RippleAssist.Feedback="{Binding RelativeSource={RelativeSource Self}, Path=Foreground, Converter={x:Static md:BrushRoundConverter.Instance}}"
                            Command="{Binding MovePrevCommand}"
                            Content="{md:PackIcon Kind=ArrowLeft,
                                                  Size=24}"
                            Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type FrameworkElement}}, Path=(TextElement.Foreground)}"
                            Style="{StaticResource MaterialDesignToolButton}"
                            ToolTip="Previous Item" />
                </md:ColorZone>
            </md:DrawerHost.LeftDrawerContent>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <md:ColorZone Padding="10"
                              md:ElevationAssist.Elevation="Dp3"
                              DockPanel.Dock="Top"
                              Mode="Standard"
                              MouseMove="ColorZone_MouseMove">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0"
                                    Orientation="Horizontal">

                            <Button Margin="0,0,0,0"
                                    md:RippleAssist.Feedback="{Binding RelativeSource={RelativeSource Self}, Path=Foreground, Converter={x:Static md:BrushRoundConverter.Instance}}"
                                    Command="{Binding MovePrevCommand}"
                                    Content="{md:PackIcon Kind=ArrowLeft,
                                                          Size=24}"
                                    Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type FrameworkElement}}, Path=(TextElement.Foreground)}"
                                    Style="{StaticResource MaterialDesignToolButton}"
                                    ToolTip="Previous Item" />

                            <Button Margin="16,0,0,0"
                                    md:RippleAssist.Feedback="{Binding RelativeSource={RelativeSource Self}, Path=Foreground, Converter={x:Static md:BrushRoundConverter.Instance}}"
                                    Command="{Binding MoveNextCommand}"
                                    Content="{md:PackIcon Kind=ArrowRight,
                                                          Size=24}"
                                    Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type FrameworkElement}}, Path=(TextElement.Foreground)}"
                                    Style="{StaticResource MaterialDesignToolButton}"
                                    ToolTip="Next Item" />

                        </StackPanel>

                    </Grid>

                </md:ColorZone>
                <Button Grid.Row="2"
                        Command="{Binding TestCommand}"
                        Content="Test" />
            </Grid>
        </md:DrawerHost>
    </md:DialogHost>
</mah:MetroWindow>
